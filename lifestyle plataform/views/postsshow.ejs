<%- include ('partials/header') %>
<%- include ('partials/nav') %>
<title>
     <%= blogs.title%> - Hossii
</title>



<style>
.maintitle{
      color: rgba(5, 184, 109, 0.918);
}
.topPost{
        box-shadow: skyblue solid 2px;
}
.blogBody{
        text-align: justify;
        box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.034), 0 3px 10px 0 rgba(0, 0, 0, 0.082);
        background-color: rgba(250, 250, 250, 0.966);
}

@media screen and (max-width: 600px){
.moreAct img{
    max-width: 150px;
    max-height: 150px;
}
.titleCard{
    max-width: 150px;
    max-height: 150px;
}
}
</style>


<div class="container mt-3">
        <div class="row">
                <div class="col-md-8 mb-4 blogBody" style=" border-bottom: 1px solid rgba(71, 70, 70, 0.295);" >
                        <div class="topPost">
                                <div  class="text-center"> 
                                        <h1 class="maintitle"><%= blogs.title%></h1>
                                </div>
                                <!--<div class=" text-center"><p><small>Created by: <a href="#"><%=blogs.author.username%></a></small></p></div>-->
                        </div>
                        <div class="text-center mb-5">
                                <img class="rounded mx-auto d-block" src="<%= blogs.image%>" style="display: block;
                                margin-left: auto;
                                margin-right: auto;
                                 width: 100%; max-height: 650px;">

                                <% if(currentUser && blogs.author.id.equals(currentUser.id)){ %>
                                        <a class="" href="/posts/<%= blogs._id %>/edit">
                                                Edit your post  <i class="fas fa-pencil-alt"></i>      
                                        </a>
                                <!--<form action="/posts/<%= blogs._id%>?_method=DELETE" method="POST">
                                      <button class="btn btn-danger">Delete</button>
                                </form>-->
                                
                                <% } %>
                                
                                
                                        
                        </div >
                        <div class="mb-4">
                                <p class="maintitle">
                                        <small>
                                                     Last Update: <%= blogs.created.toDateString() %> by  <a href="#"><%=blogs.author.username%></a>
                                        </small>
                                </p>
                                <p><%= blogs.body%></p>
                        </div>
                </div>

                <div class="col-md-4 text-center">
                        <p><small>Advertisement</small><p>
                </div>
        </div>

        <div class="row">
                <div class="col-md-12">
                        <div class="text-center">
                             <h3 class=" maintitle mt-3 mb-3">More Interesting Posts</h3>
                        </div>
                </div>
        </div>
        <div class="row">
              
                        <%allPosts.forEach(function(more){%>
                                <% if ( more._id === blogs._id) { %>
                                        <% return true; %>
                                <% } %>
                                
                          
                                        <div class="col-md-2 col-sm-4 col-6 moreAct">
                                                <a href="/posts/<%=more._id%>">
                                                        <img src="<%= more.image %>" class="card-img-top" style="max-height: 100px;">
                                                        
                                                               
                                                                <p class="card-title titleCard"><%=more.title%></p>
                                                               
                                                                <!--<p class="card-text-end"><small class="text-muted">Created in <%= more.created.toDateString() %> </small></p>-->
                                                        
                                                </a>
                                        </div>               
                                
                        <% }); %>
        </div>
</div>





