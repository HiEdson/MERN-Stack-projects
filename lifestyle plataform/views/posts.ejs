    <% Posts.forEach(function(blogs){ %>
    <div class="col-md-6">
      
     <div class="eachPost">
       <div class="card mb-3">
                <div class="row no-gutters">
                        <div class="col-md-4">
                          <img src="<%= blogs.image %>" class="card-img mainImg" alt="..." style="height: 150px; width: 150;">
