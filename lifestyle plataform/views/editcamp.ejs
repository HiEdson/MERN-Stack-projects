<%- include ('partials/header') %>
<%- include ('partials/nav') %>
<head>
    <title>
            <%=camp.name%>
    </title>
</head>

<h3 class="text-center mt-4">Edit <strong><%=camp.name%></strong></h3>

<div class="container">
        
        <form id="formed" action="/activities/<%= camp._id %>/?_method=PUT" method="POST" class="campform" enctype="multipart/form-data">
            <div   class="row">
                <div id="asd" class="col-md-9">
                    <input type="text"  class="form-control" name="name" value="<%= camp.name%>">
                </div>
                
                <div id="asd" class="col-md-3">
                    <input type="text"  class="form-control" name="local" value="<%= camp.local%>">
                </div>
                <div id="asd" class="col-md-12">
                        <label for="image">Image</label>
                        <input type="file" id="image" class="form-control" name="image" accept="image/*">

                        <!--<input type="text" class="form-control"  name="camp[image]"value="<%= camp.image%>">-->
                </div>
                <div class="col-md-12">
                    <textarea name="description" class="des" placeholder="Tell Us About It..."><%= camp.description%></textarea>
                    <!--<input type="text"  class="form-control des" name="camp[description]" value="<%= camp.description%>">-->
                </div>
            </div>
        <br>
            <button  id="campnewbtn" class="btn btn-primary">Submit</button>
        </form>
        <div >
                <form action="/activities/<%= camp._id %>?_method=DELETE" method="POST" class="mb-5">
                    <button class="btn btn-danger "><i class="fas fa-trash-alt">Delete</i></button>
                </form>
        </div>
        
</div>






